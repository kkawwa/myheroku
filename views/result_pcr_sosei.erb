<html>
	<head> 
	    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
	<script>
	  (adsbygoogle = window.adsbygoogle || []).push({
	    google_ad_client: "ca-pub-1352714621320494",
	    enable_page_level_ads: true
	  });
	</script>
	  </head>
	<body>
		<h1>PCR 組成計算</h1>

		<!-- admax -->
    <div style="position:absolute;top:0;right:0"><script src="//adm.shinobi.jp/s/11131e309c1ee566991d1213db653a11"></script></div>
    <!-- admax -->    

		<div>　</div>

		<form action="r" method="GET" style="display:inline; padding-left:2px">
			<input type="submit" value="r">
		</form>

		<form action="ex" method="GET" style="display:inline; padding-left:2px">
			<input type="submit" value="ex">
		</form>

		<form action="ps" method="GET" style="display:inline; padding-left:2px">
			<input type="submit" value="Prime star">
		</form>

		<form action="kod" method="GET" style="display:inline; padding-left:2px">
			<input type="submit" value="kod + neo">
		</form>


		<div>　</div>

		<form action="result_pcr_sosei" method="POST">
			<div>
				<%= "<input name='one_sample' value='#{@one_sample}'>" %>
				<label>μl ずつのPCR</label>
			</div>

			<div>
				<%= "<input name='sample_su' value='#{@sample_su}'>" %>
				<label> 　: サンプル数</label>
			</div>

			<div>
				<%= "<input name='temp_ryou' value='#{@temp_ryou}'>" %>
				<label>　: 1つのサンプルに入れる鋳型の量 (μl)</label>
			</div>

			<div><br><br></div>

			<div>
				<%= "<input name='per_sosei' value='#{@per_sosei}'>" %>
				<label>μl 分の組成↓↓↓</label>
			</div>

			<div><p></p></div>

			<div>
				<%= "<input name='buffer' value='#{@buffer}'>" %>
				<label>　: buffer</label>
			</div>

			<div>
				<%= "<input name='dNTPs' value='#{@dNTPs}'>" %>
				<label>　: dNTPs</label>
			</div>

			<div>
				<%= "<input name='magnesium' value='#{@magnesium}'>" %>
				<label>　: magnesium</label>
			</div>

			<div>
				<%= "<input name='sonota' value='#{@sonota}'>" %>
				<label>　: その他</label>
			</div>

			<div>
				<%= "<input name='primer_f' value='#{@primer_f}'>" %>
				<label>　: primer F</label>
			</div>

			<div>
				<%= "<input name='primer_r' value='#{@primer_r}'>" %>
				<label>　: primer R</label>
			</div>

			<div>
				<%= "<input name='kouso' value='#{@kouso}'>" %>
				<label>　: 酵素</label>
			</div>

			<div><p></p></div>

			<div>
				<input type="submit" value="実行">
			</div>
		</form>

		<table>
			<tr>
				<td><div><%= "#{@one_sample} μl あたり" %></div></td>
				<td><div style="padding-left:10px"><%= "#{@one_sample*@sample_su} μl あたり" %></div></td>
			</tr>

			<tr>
				<td>
				<table border="1">
					<tr>
						<td>buffer</td>
						<td><%= "#{@calc_buffer}" %></td>
					</tr>

					<tr>
						<td>dNTPs</td>
						<td><%= "#{@calc_dNTPs}" %></td>
					</tr>

					<tr>
						<td>magnesium</td>
						<td><%= "#{@calc_magnesium}" %></td>
					</tr>

					<tr>
						<td>その他</td>
						<td><%= "#{@calc_sonota}" %></td>
					</tr>

					<tr>
						<td>primer F</td>
						<td><%= "#{@calc_primer_f}" %></td>
					</tr>

					<tr>
						<td>primer R</td>
						<td><%= "#{@calc_primer_r}" %></td>
					</tr>

					<tr>
						<td>鋳型</td>
						<td><%= "#{@temp_ryou}" %></td>
					</tr>

					<tr>
						<td>酵素</td>
						<td><%= "#{@calc_kouso}" %></td>
					</tr>

					<tr>
						<td>水</td>
						<td><%= "#{@water}" %></td>
					</tr>
				</table>
				</td>
			
				<td style="padding-left:10px">
					<table border="1">
						<tr>
							<td>buffer</td>
							<td><%= "#{@calc_buffer*@sample_su}" %></td>
						</tr>

						<tr>
							<td>dNTPs</td>
							<td><%= "#{@calc_dNTPs*@sample_su}" %></td>
						</tr>

						<tr>
							<td>magnesium</td>
							<td><%= "#{@calc_magnesium*@sample_su}" %></td>
						</tr>

						<tr>
							<td>その他</td>
							<td><%= "#{@calc_sonota*@sample_su}" %></td>
						</tr>

						<tr>
							<td>primer F</td>
							<td><%= "#{@calc_primer_f*@sample_su}" %></td>
						</tr>

						<tr>
							<td>primer R</td>
							<td><%= "#{@calc_primer_r*@sample_su}" %></td>
						</tr>

						<tr>
							<td>鋳型</td>
							<td><%= "#{@temp_ryou*@sample_su}" %></td>
						</tr>

						<tr>
							<td>酵素</td>
							<td><%= "#{@calc_kouso*@sample_su}" %></td>
						</tr>

						<tr>
							<td>水</td>
							<td><%= "#{@water*@sample_su}" %></td>
						</tr>
					</table>
				</td>
			</tr>
		</table>




		<div style="position:absolute;bottom:10;right:10;position:fixed"><a href="/"><font size='5'>home へ</font></a></div>

		<div><p></p></div>
	    
		
	</body>
</html>
